%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et
{deps, [
        {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
        {cuttlefish, ".*", {git, "git://github.com/basho/cuttlefish.git", {tag, "2.0.1"}}}
       ]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.
{post_hooks, [{compile, "cp mibs/* priv/mibs/"},
              {clean, "rm -f include/RIAK.hrl priv/mibs/*"}]}.

{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B - \"(riak_core_util|riak_repl_console|riak)\" : Mod)", []}]}.
